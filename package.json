{
  "name": "relictum-launcher",
  "private": true,
  "version": "3.3.0",
  "author": "Relictum",
  "description": "The ultimate, secure, and modern launcher for private servers.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Litas-dev/Relictum-Launcher.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5174 && electron .\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.16",
    "framer-motion": "^10.16.4",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.292.0",
    "node-7z": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jimp": "^0.22.12",
    "png-to-ico": "^3.0.1",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.relictum.launcher",
    "productName": "Relictum Launcher",
    "directories": {
      "output": "dist_v3.3.0_final"
    },
    "files": [
      "dist-electron/**/*",
      "dist_renderer/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Relictum Launcher",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "installerHeader": "src/assets/logo-new-white.png",
      "installerSidebar": "build/icon.png"
    }
  }
}
